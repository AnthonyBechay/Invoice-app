rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User documents (invoices, proformas)
    match /documents/{userId}/userDocuments/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Clients
    match /clients/{userId}/userClients/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Settings
    match /settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Payments - user isolation required
    match /payments/{paymentId} {
      allow read, write: if request.auth != null &&
                         request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
                    request.auth.uid == request.resource.data.userId;
    }

    // Counters
    match /counters/{userId}/documentCounters/{counterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Item Counter (for stock items)
    match /counters/{userId}/itemCounter/{counterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Client Counter (for client IDs)
    match /counters/{userId}/clientCounter/{counterId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Stock items
    match /items/{userId}/userItems/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Expenses - Personal expense tracking
    match /expenses/{userId}/userExpenses/{expenseId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Expense Categories
    match /expenses/{userId}/categories/{categoryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
